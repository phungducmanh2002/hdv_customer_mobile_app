<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.hotel.HomeActivity">

    <ScrollView
        android:id="@+id/pageHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/header1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    >


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_boder_radius_blue"
                        android:text="Signup" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSignin"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_fill_rounded_blue"
                        android:text="signin"
                        android:textColor="@color/white" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/header2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="phungducmanh"
                            android:layout_marginRight="10dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_fill_rounded_orange"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:id="@+id/username"
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="100dp"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_avatar_male"
                                android:id="@+id/userAvatar"
                                />

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="NEW"

                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="more"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </RelativeLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelPanel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelPanel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hotelPanelImage="@drawable/img_hotel_ba" />

                    <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelPanel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hotelPanelImage="@drawable/img_hotel_hai"

                        />

                    <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelPanel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelPanel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="TOP"

                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="more"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.example.hotel_customer.ui.core.myui.components.container.customeView.HotelItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>